{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main>
  <section>
    <div class="form">
      <h1 class="form__title">Make a new User</h1>
      <form method="POST" action="/user-create">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class="form__label">Email address:</label>
            <input type="email" class="form__input" name="email" id="">
          </div>
          <div class="form__field">
            <label for="login" class="form__label">Login:</label>
            <input type="login" class="form__input" name="login" id="">
          </div>
          <div class="form__field">
            <label for="password" class="form__label">Password:</label>
            <input type="password" class="form__input" name="password" id="">
          </div>
          <button class="form__button">Sign Up</button>
        </div>
      </form>
    </div>
  </section>
  <section>
    <div class="form">
      <h1 class="form__title">List of Users</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
          <mark>List is empty!</mark>
          {{else}}
            <ul >
              {{#each list}}
              <li>{{email}} | {{login}} | {{id}}<a href="/user-delete?id={{id}}">(delete)</a> </li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>
  <section>
    <div class="form">
      <h1 class="form__title">Update email</h1>
      <form method="POST" action="/user-update">
        <div class="form__content">
          <div class="form__field">
            <label for="id" class="form__label">ID:</label>
            <input type="id" class="form__input" name="id" id="">
          </div>
          <div class="form__field">
            <label for="email" class="form__label">New Email address:</label>
            <input type="email" class="form__input" name="email" id="">
          </div>
          <div class="form__field">
            <label for="password" class="form__label">Password:</label>
            <input type="password" class="form__input" name="password" id="">
          </div>
          <button class="form__button">Update</button>
        </div>
      </form>
    </div>
  </section>
</main>

