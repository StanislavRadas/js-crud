<main class="main">
    {{#with data}}
    <div class="content">
        <div class="header">
            <div class="title">
                <h1 class="title__text">Моя бібліотека</h1>
            </div>
            <div class="icons">
                <div>
                    <a href="/spotify-search" class="link">
                        <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M21.8286 4C26.557 4 31.0918 5.87836 34.4353 9.22187C37.7788 12.5654 39.6571 17.1001 39.6571 21.8286C39.6571 26.2446 38.0389 30.304 35.3783 33.4309L36.1189 34.1714H38.2857L52 47.8857L47.8857 52L34.1714 38.2857V36.1189L33.4309 35.3783C30.1958 38.1397 26.0819 39.6569 21.8286 39.6571C17.1001 39.6571 12.5654 37.7788 9.22187 34.4353C5.87836 31.0918 4 26.557 4 21.8286C4 17.1001 5.87836 12.5654 9.22187 9.22187C12.5654 5.87836 17.1001 4 21.8286 4ZM21.8286 9.48571C14.9714 9.48571 9.48571 14.9714 9.48571 21.8286C9.48571 28.6857 14.9714 34.1714 21.8286 34.1714C28.6857 34.1714 34.1714 28.6857 34.1714 21.8286C34.1714 14.9714 28.6857 9.48571 21.8286 9.48571Z"
                                fill="white" />
                        </svg>
                    </a>
                </div>
                <div>
                    <a href="/spotify-choose" class="link">
                        <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 28H28M28 28H52M28 28V4M28 28V52" stroke="white" stroke-width="5" stroke-linecap="round"
                                stroke-linejoin="round" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="playlists">
            <ul class="list">
                {{#each list}}
                <li class="list__item">
                    <div class="card__list">
                        <img src="{{image}}" alt="photo" width="275px" height="275px">
                        <div class="list__content">
                            <p class="name">{{name}}</p>
                            <p class="amount">Songs: {{amount}}</p>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/with}}
</main>